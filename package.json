{
  "name": "rmmz-electron-template",
  "productName": "Rmmz Electron Template",
  "version": "0.2.0",
  "description": "A template that will allow you to deploy your Rpg Maker MZ game as an electron app.",
  "main": "./out/main/index.js",
  "author": "DdmDraegonis",
  "homepage": "",
  "license": "MIT",
  "chromium-args": "--force-color-profile=srgb",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "yarn run build && electron-builder --win --config",
    "build:mac": "yarn run build && electron-builder --mac --config",
    "build:linux": "yarn run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.1",
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@vitejs/plugin-react": "^4.1.0",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "electron-devtools-assembler": "^1.2.0",
    "electron-store": "^8.1.0",
    "electron-vite": "^1.0.28",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "fflate": "^0.8.0",
    "fs-jetpack": "^5.1.0",
    "gamepad.js": "^2.1.0",
    "immer": "^10.0.2",
    "pixi.js": "6.0.4",
    "prettier": "^3.0.2",
    "ramda": "^0.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "vite": "^4.4.9",
    "zustand": "^4.4.1"
  }
}
